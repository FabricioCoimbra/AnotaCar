<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnotaCar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-primary navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AnotaCar</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                Cadastros
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="Marca" asp-action="Index">Marca</a>
                                <a class="dropdown-item"  asp-area="" asp-controller="TipoVeiculo" asp-action="Index">Tipo de Veículo</a>
                                <a class="dropdown-item"  asp-area="" asp-controller="TipoCombustivel" asp-action="Index">Tipo de Combustível</a>
                                <a class="dropdown-item"  asp-area="" asp-controller="TipoServico" asp-action="Index">Tipo de Serviço</a>
                                <a class="dropdown-item"  asp-area="" asp-controller="PostoCombustivel" asp-action="Index">Posto de Combustível</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item"  asp-area="" asp-controller="Veiculo" asp-action="Index">Veículo</a>
                            </div>
                        </li>     
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                Registros
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="Abastecimento" asp-action="Index">Abastecimento</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Servico" asp-action="Index">Serviço</a>
                            </div>
                        </li>                      
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Relatorio" asp-action="Index">Relatórios</a>                               
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - AnotaCar - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
